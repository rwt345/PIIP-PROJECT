<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vehicle Details Form</title>
    <link rel="stylesheet" href="/stylesheets/Vstyle.css">
</head>
<body>
    <div class="form-container">
        <h1>Vehicle Details</h1>
        <form id="vehicleForm" action="/vehicleRegister" method="post">
            <!-- Vehicle Name -->
            <label for="vehicleName">Vehicle Name:</label>
            <input type="text" id="vehicleName" name="vehicleName" placeholder="Enter vehicle name" required>

            <!-- Year -->
            <label for="year">Year:</label>
            <input type="number" id="year" name="year" min="1886" max="2024" placeholder="Enter year" required>
            

            <!-- Model -->
            <label for="model">Model:</label>
            <input type="text" id="model" name="model" placeholder="Enter model" required>

            <!-- State of Registration -->
            <label for="state">State of Registration:</label>
            <select id="state" name="stateOfRegistration" required>
                <option value="">Select a State</option>
                <option value="CA">Dublin</option>
                <option value="NY">Cork</option>
                <option value="TX">Galway</option>
                <!-- Add more states as needed -->
            </select>

            <!-- Purchase Type -->
            <label for="purchaseType">Purchase Type:</label>
            <select id="purchaseType" name="purchaseType" required>
                <option value="">Select Purchase Type</option>
                <option value="new">New</option>
                <option value="used">Used</option>
            </select>

            <!-- Year Owned Since -->
            <label for="yearOwned">YearOwnedSince:</label>
            <input type="number" id="yearOwned" name="yearOwned" min="1900" max="2024" placeholder="Enter ownership year" required>

            <!-- Current Mileage -->
            <label for="currentMileage">Current Mileage:</label>
            <input type="number" id="currentMileage" name="currentMileage" min="0" placeholder="Enter mileage" required>

            <!-- Upload Image -->
            <label for="vehicleImage">Upload Image:</label>
            <input type="file" id="vehicleImage" name="image" accept=".jpg, .gif, .png" required>
            <small>File size must not exceed 500KB. Allowed formats: .jpg, .gif, .png</small>

            <!-- Submit Button -->
            <!-- <button type="submit">Submit</button> -->
            <a href="/Creg" type="submit" class="button">Submit</a>
        
        </form>
    </div>
    <script src="/javascripts/Vscript.js"></script>
</body>
</html>
