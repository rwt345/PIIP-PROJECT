<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Management</title>
    <link rel="stylesheet" href="/stylesheets/Cstyle.css">
</head>
<body>
    <button id="backButton" class="back-button">Back</button>
    <div class="container">
        <h1>Customer Management</h1>

        <!-- Customer Form -->
        <form id="customerTable">
            
            <h2>Add or Edit Customer</h2>

            <label for="customerId">Customer ID:</label>
            <input type="text" id="customerId" name="customerId" placeholder="Enter Customer ID" required>

            <label for="customerName">Customer Name:</label>
            <input type="text" id="customerName" name="customerName" placeholder="Enter Customer Name" required>

            <label for="contact">Contact:</label>
            <input type="text" id="contact" name="contact" placeholder="Email/Phone" required>

            <label for="address">Address:</label>
            <input type="text" id="address" name="address" placeholder="Enter Address" required>

            <label for="customerType">Customer Type:</label>
            <select id="customerType" name="customerType" required>
                <option value="">Select Type</option>
                <option value="Individual">Individual</option>
                <option value="Corporate">Corporate</option>
            </select>

            <button type="submit">Save Customer</button>
            <a href="/Sreg"id="sub" type="submit">Enter Service Details</a>
        </form>

        <h2>Customer Records</h2>
        <input type="text" id="search" placeholder="Search by name or contact">
        <table id="customerTable">
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Address</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="customerTableBody"></tbody>
        </table>
    </div>

    <script src="/javascripts/Cscript.js"></script>
</body>
</html>
